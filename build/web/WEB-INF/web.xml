<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>filter.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>UsersCRUDServlet</servlet-name>
        <servlet-class>controller.admin.UserCRUDServlet</servlet-class>
    </servlet>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>UsersAddServlet</servlet-name>
        <servlet-class>controller.admin.UserAddServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsersEditServlet</servlet-name>
        <servlet-class>controller.admin.UserEditServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsersDeleteServlet</servlet-name>
        <servlet-class>controller.admin.UserDeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountServlet</servlet-name>
        <servlet-class>controller.user.AccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmailControl</servlet-name>
        <servlet-class>controller.user.EmailControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResetPasswordServlet</servlet-name>
        <servlet-class>controller.user.ResetPasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubjectDetailServlet</servlet-name>
        <servlet-class>controller.subject.SubjectDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UsersCRUDServlet</servlet-name>
        <url-pattern>/adminUserCRUD</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsersAddServlet</servlet-name>
        <url-pattern>/adminUserAdd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsersEditServlet</servlet-name>
        <url-pattern>/adminUserEdit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsersDeleteServlet</servlet-name>
        <url-pattern>/adminUserDelete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountServlet</servlet-name>
        <url-pattern>/AccountServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmailControl</servlet-name>
        <url-pattern>/EmailControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResetPasswordServlet</servlet-name>
        <url-pattern>/ResetPasswordServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubjectDetailServlet</servlet-name>
        <url-pattern>/SubjectDetail</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
